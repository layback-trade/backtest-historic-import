{
  "compilerOptions": {
    "target": "ES2022",                                  
    "module": "commonjs",                                
    "baseUrl": "./",                                  
    "paths": {
      "@/*": ["src/*"]
    },                                      
    "sourceMap": true,
    "inlineSources": true,
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,
    "types": ["vitest/globals"]                            
  }
}
